head = script.Parent.head
motor1 = script.Parent.motor1.Motor
motor2 = script.Parent.motor2.Motor
one = script.Parent.one
two = script.Parent.two

on = false
script.Parent.sensor.Touched:Connect(function(p)
	if p.Parent.Name == "Investor" or "First Class" or "Business Class" or "Premium Economy" or "Economy" then
		if on == false then
			on = true
			wait(0.1)
			left.Motor.DesiredAngle = 1.5
			right.Motor.DesiredAngle = -1.5
			motor1.DesiredAngle = 0.79
			motor2.DesiredAngle = -0.79
			script.Parent.Wall.CanCollide = false
			script.Parent.Parent.LED.Fob:Play()
			wait(0.3)
			script.Parent.Parent.Values:WaitForChild("LEDStandby").Value = false
			script.Parent.Parent.LED.BrickColor = BrickColor.new("Lime green")
			two.Transparency = 1
			one.BrickColor = BrickColor.new("Lime green")
			head.Transparency = 0
			wait(0.4)
			script.Parent.Wall.CanCollide = true
			left.Motor.DesiredAngle = 0
			right.Motor.DesiredAngle = 0
			two.Transparency = 0
			one.BrickColor = BrickColor.new("Really red")
			head.Transparency = 1
			motor1.DesiredAngle = 0
			motor2.DesiredAngle = 0
			script.Parent.Parent.LED.BrickColor = BrickColor.new("Really red")
			wait(0.3)
			script.Parent.Parent.Values:WaitForChild("LEDStandby").Value = true
			on = false
		elseif on == true then
			
		end
	end
end)

left = script.Parent.Left
right = script.Parent.Right



